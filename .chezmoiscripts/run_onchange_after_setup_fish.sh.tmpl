#!/bin/bash
# fish setup hash: {{ include "dot_config/fish/config.fish" | sha256sum }}

# Add fish to /etc/shells if not already there
if ! grep -q "$HOME/.local/bin/fish" /etc/shells 2>/dev/null; then
    echo "$HOME/.local/bin/fish" | sudo tee -a /etc/shells
fi

# Set fish as default shell
sudo chsh -s "$HOME/.local/bin/fish" "$USER"